---
interface Props {
  message?: string;
}

const { message } = Astro.props;
---

<form
  method="post"
  action="/newsletter"
  class:list={[
    'w-full flex flex-col gap-4 border-2 px-6 py-8 rounded-md text-left',
    { hidden: message },
  ]}
>
  <div class="flex flex-col gap-1">
    <label for="name">Name</label>
    <input
      type="text"
      class="px-2 py-1 bg-transparent border-2 rounded-md outline-none focus-within:ring-2 ring-primary/90 transition-all ease-in-out duration-200"
      id="name"
      name="name"
      required
    />
  </div>
  <div class="flex flex-col gap-1">
    <label for="email">Email</label>
    <input
      type="text"
      class="px-2 py-1 bg-transparent border-2 rounded-md outline-none focus-within:ring-2 ring-primary/90 transition-all ease-in-out duration-200"
      id="email"
      name="email"
      required
    />
  </div>
  <button
    type="submit"
    class="bg-primary text-white px-6 py-2 font-bold rounded-md"
    >Subcribe</button
  >
</form>
